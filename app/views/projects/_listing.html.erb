<div class="col-lg-8 col-sm-9">  
	<div class="panel-group" id="projects">
		<ul class="list-group pull-left col-lg-12 col-sm-12 no-padding no-margin" id="projects-heading">
			<li class="list-group-item col-lg-12 col-sm-12 pull-left no-padding">
				<h4 class="no-margin pull-left col-lg-12 col-sm-12 no-padding">
					<span class="pull-left">Projects</span>
					<span class="badge pull-left margin-xs-left"><%= @projects.count %></span>
				</h4 >
				<button class="btn btn-default btn-lg btn-primary pull-right" id="btn-new-project" data-toggle="modal" data-target="#newproject-modal">new project</button>
			</li>
		</ul>
		<% cpt=0 %>

		<% @projects.each do |project| %>
		
			<%
			id=project.id.to_s
			projectHtml = '<div class="panel panel-default" id="project-'+id+'"><div class="panel-heading pull-left panel-document" data-toggle="collapse" data-parent="#projects" data-target="#project-'+id+'-content">'
			%>

			<%= projectHtml.html_safe %>

			<div class="panel-title pull-left">
				<div class="project-title col-lg-6 col-sm-7">
					<%= link_to "<small>#{project.name}</small>".html_safe, project_path(project), :class => 'document-version' %>
				</div>
				<div class="col-lg-3 col-sm-2">
					<span data-toggle="tooltip" title="nombre de segments traduits"><small>36/60</small></span>
				</div>
				<div class="col-lg-3 col-sm-3">
					<div class="panel-title progress progress-striped" data-toggle="tooltip" title="60% Complete">
						<div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
						</div>
					</div>
				</div>
			</div>

		</div>
		<% projectContentHtml='<div id="project-'+id+'-content" class="pull-left panel-collapse collapse col-lg-12 col-sm-12 no-padding">'
		%>
		<%= projectContentHtml.html_safe %>
		<ul class=" panel-body list-group no-margin">
			<li class="list-group-item pull-left col-lg-12 col-sm-12">
				<ul class="list-unstyled">
					<li class="col-lg-7 col-sm-5"><a href="#" class="document-version">EN > NL</a></li>
					<li class="col-lg-3 col-sm-3">
						<ul class="list-unstyled" data-toggle="tooltip" title="nombre de segments traduits">
							<li>
								<small>36/60</small>
							</li>
						</ul>
					</li>
					<li class="col-lg-2 col-sm-4 no-padding">
						<ul class="progress progress-striped col-lg-12 col-sm-12 no-padding pull-left" data-toggle="tooltip" title="60% Complete">
							<li class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
							</li>
						</ul>
					</li>
				</ul>
			</li>
			<li class="list-group-item pull-left col-lg-12 col-sm-12">
				<ul class="list-unstyled">
					<li class="col-lg-7 col-sm-5"><a href="#" class="document-version">EN > ES</a></li>
					<li class="col-lg-3 col-sm-3">
						<ul class="list-unstyled" data-toggle="tooltip" title="nombre de segments traduits">
							<li>
								<small>36/60</small>
							</li>
						</ul>
					</li>
					<li class="col-lg-2 col-sm-4 no-padding">
						<ul class="progress progress-striped col-lg-12 col-sm-12 no-padding pull-left" data-toggle="tooltip" title="60% Complete">
							<li class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
							</li>
						</ul>
					</li>
				</ul>
			</li>

		</ul>
	</div>
	</div>
<% end %>
</div> 
</div>